#!groovy

pipeline {

  agent any

  environment {
    HOST_NAME = credentials('node1_ip_address')

    TEST_URL = "http://${env.HOST_NAME}/mydrive"
  }

  stages {
    stage('Access test') {
      steps {
        build job: 'ansible/common/tests/access-tests/access-to-url-should-return-http-status-code-403', 
          parameters: [
                        string(
                          name: 'TEST_URL',
                          value: "${env.TEST_URL}"
                        )
                      ]
      }
    }
  } 
}

#!groovy

pipeline {

  agent any

  stages {
    stage('ssh') {
      steps {
        build job: 'node2/system/ssh/add-users_and_change-sshd-config-and-firewall'
      }
    }

    stage('system_kernel_update-and-remove-old-kernels') {
      steps {
        build job: 'node2/ad-hoc/get-system-information'
        build job: 'node2/ad-hoc/get-kernels'
        build job: 'node2/system/kernel/update-and-remove-old-kernels'
      }
    }

    stage('system-update-and-reboot') {
      steps {
        build job: 'node2/system/update-and-set-selinux-disabled'
        build job: 'node2/ad-hoc/get-system-information'
        build job: 'node2/ad-hoc/get-kernels'
      }
    }
  } 
}
